<%if(success && success.length){%>
<div class="alert alert-success alert-dismissible fade show col-lg-5 col-md-5 col-sm-7 col-9 max-auto offset-lg-2 offset-1" role="alert" style="height: 10px; display: flex;  align-items: center; margin-top: 2px;">
<%= success %>
<button type="button" class="btn-close"   style="height: 10px; display: flex;  align-items: center; padding-bottom: 5px;" data-bs-dismiss="alert" aria-label="Close"></button>
</div><%}%>


<%if(error && error.length){%>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert" style="height: 10px; display: flex;  align-items: center; margin-top: 2px;">
    <%= error %>
    <button type="button" class="btn-close"  style="height: 10px; display: flex;  align-items: center; padding-bottom: 5px;" data-bs-dismiss="alert" aria-label="Close"></button>
    </div><%}%>
